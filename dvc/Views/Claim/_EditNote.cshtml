@using VanWagenen.Dvc.Repository.Models
@model Note
<div id="DragWithModalHeader" class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Edit Note</h3>
</div>
<div>
    @using (Ajax.BeginForm("UpdateNote", "Claim", FormMethod.Post,
                            new AjaxOptions
                            {
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "POST",
                                UpdateTargetId = "list-of-people"
                            }))
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <div class="modal-body">
            @Html.TextAreaFor(model => model.Content, new { @Style = "height:400px; width:300px;" })
        </div>
        <div class="modal-footer">, 
            <button class="btn btn-inverse" type="submit">Save</button>
        </div>
    }
    </div> 

